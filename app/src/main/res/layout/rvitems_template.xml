<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/kotakfilm">

    <ImageView
        android:id="@+id/ivSosmed"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/yuni_poster"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvTitileSosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yuni"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDescSosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tgl Tayang : 9 Desember 2021"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvDescSosmed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durasi : 2 Jam 2 Menit"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvDescSosmed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produksi : Starvision Plus, Fourcolours Films"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvDescSosmed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sutradara : Kamila Andini"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvDescSosmed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemain : Arwanda Kirana, Kevin Ardilova, Dimas Aditya, dkk"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvDescSosmed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre : Drama"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>